<section class="sign form-container">

  <p class="message">{{>flash_message}}</p>

  <form method="POST" action="/foo" id="form_user">
    <div class="form-item-wrapper flexed-item">
      <label for="firstname" class="label-ref label">Name</label>
      <input id="firstname" type="text" class="input-text input" placeholder="Albert"  value="robert" name="name">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="lastname" class="label-ref label">Last Name</label>
      <input id="lastname" type="text" class="input-text input" placeholder="Biceps"  value="iasoni"
        name="lastname">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" type="email" class="input-text input" placeholder="albert.biceps@gmail.com" 
        value="robert@admin.com" name="email">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" type="password" class="input-text input" placeholder="••••••"  value="1234"
        name="password">
    </div>
    <button class="button-primary white">Create Account</button>
  </form>
  <p class="form-sub-infos">Already have an account ? <a href="/signin" class="button-link-form">Sign In</a></p>
</section>