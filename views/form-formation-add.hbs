            <h2 class="hacheformation">Ajouter une formation</h2>
            <hr>
    <section class="formation-container">

        <section class="all-description">
        <form action="/formation-add" method="post" class="add-product-form" enctype="multipart/form-data">


            <div class="formation-item">
                <label for="form-title" class="label-name label"></label>
                <input id="form-title" type="text" class="form-title form-input line" placeholder="Intitulé de la formation" name="title">
            </div>

            <div class="formation-item">
                <label for="form-mini-descr" class="label-descr label"></label>
                <input id="form-mini-descr" type="text" class="form-mini-descr form-input line" placeholder="Description courte" name="minidescription">
            </div>

            <div class="formation-item">
                <label for="form-img" class="label-price label">Image</label>
                <input id="form-img" type="file" class="form-img" name="image">
            </div>

            <div class="form-item-wrapper flexed-item">
                <label for="category" class="label-main-cat label">Categorie</label>
                <select id="category" class="select" required name="category">
                    <option value="-1" disabled selected>Choose a category</option>
                    <option value="développement personel">développement personel</option>
                    <option value="développement professionnel">développement professionnel"</option>
                    <option value="enfants">enfants</option>
                </select>

    </section>

    <section class="long-description">
        <label for="form-descr" class="label-descr label">Description</label>
        <textarea id="form-descr" type="text" class="form-descr form-input" placeholder="Description" name="description"></textarea>
    </section>
